<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h1 class="h4 mb-3">Tambah Kode Beli</h1>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="POST" action="/admin/licenses/new">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label class="form-label">Kode</label>
            <input class="form-control" type="text" name="code" required />
            <div class="form-text">Silahkan hubungi programmer via <a href="https://wa.me/6282139403434" target="_blank" rel="noopener">WhatsApp +62 821-3940-3434</a> untuk permintaan kode beli.</div>
          </div>
          <div class="mb-3">
            <label class="form-label">Catatan</label>
            <input class="form-control" type="text" name="note" />
          </div>
          <button class="btn btn-primary" type="submit">Simpan</button>
          <a class="btn btn-secondary" href="/admin/licenses">Batal</a>
        </form>
      </div>
    </div>
  </div>
 </div>
