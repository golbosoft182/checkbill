<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CheckBill</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
          <i class="bi bi-cash-coin"></i>
          <span>CheckBill</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
          <% if (user) { %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a class="nav-link <%= currentPath==='/' ? 'active' : '' %>" href="/"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
            <li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/companies') ? 'active' : '' %>" href="/companies"><i class="bi bi-buildings me-1"></i>Master Perusahaan</a></li>
            <li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/reminders') ? 'active' : '' %>" href="/reminders"><i class="bi bi-bell me-1"></i>Reminder</a></li>
            <li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/transactions') ? 'active' : '' %>" href="/transactions"><i class="bi bi-receipt me-1"></i>Transaksi</a></li>
            <% if (isSuper) { %>
              <li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/admin/licenses') ? 'active' : '' %>" href="/admin/licenses"><i class="bi bi-key me-1"></i>Admin: Kode Beli</a></li>
              <li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/admin/users') ? 'active' : '' %>" href="/admin/users"><i class="bi bi-people me-1"></i>Admin: Users</a></li>
            <% } %>
          </ul>
          <div class="d-flex align-items-center gap-2">
            <span class="text-white-50"><i class="bi bi-person-circle me-1"></i><%= user.username %> (<%= role %>)</span>
            <form method="POST" action="/logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-light btn-sm" type="submit"><i class="bi bi-box-arrow-right me-1"></i>Logout</button>
            </form>
          </div>
          <% } else { %>
            <div class="ms-auto">
              <a href="/login" class="btn btn-light"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
            </div>
          <% } %>
        </div>
      </div>
    </nav>
    <main class="container my-4">
      <%- body %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
 </html>